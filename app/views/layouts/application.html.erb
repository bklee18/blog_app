<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>Blog App</h1>
  <header class="btn-block">
    <% if logged_in? %>
      <%= link_to "Profile", current_user, class: "btn-sm, btn-success" %>
      <%= link_to "Home", root_path, class: "btn-sm, btn-success" %>
      <%= link_to "Log out", logout_path, method: "delete", class: "btn-sm, btn-success" %>
    <% else %>
      <%= link_to "Login", login_path, class: "btn-sm, btn-success" %>
    <% end %>
  </header>
  <div class="container">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </div>



</body>
</html>
